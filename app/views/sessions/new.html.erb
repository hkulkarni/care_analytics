<div class="login-page">
  <div class="form">
    <h4>Welcome to Formudent!</h4>
    <%= form_tag '/login', class: 'login-form' do %>
      Email: <%= text_field_tag :email %>
      Password: <%= password_field_tag :password %>
      <%= submit_tag "Login" %>
    <% end %>
     Not registered? <%= link_to 'Create an account', '/signup' %>
  </div>
</div>